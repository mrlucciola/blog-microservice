{
  "scripts": {
    "create": "kubectl apply -f k8s/",
    "delete": "kubectl delete -f k8s/",
    "list:pods": "kubectl get pods",
    "list:depls": "kubectl get deployments",
    "exec:pod": "sh -c 'kubectl exec -it ${0} sh'",
    "describe:pod": "kubectl describe pod",
    "describe:depl": "kubectl describe deployment"
  }
}

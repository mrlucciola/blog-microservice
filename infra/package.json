{
  "scripts": {
    "create": "kubectl apply -f k8s/",
    "delete": "kubectl delete -f k8s/",
    "delete:posts": "kubectl delete -f k8s/posts.yaml",
    "list:pods": "kubectl get pods",
    "list:deployments": "kubectl get deployments",
    "exec:posts": "kubectl exec -it posts sh",
    "describe:posts": "kubectl describe pod posts"
  }
}

{
  "name": "blog-microservice",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "build:watch": "tsc -b tsconfig.json --watch",
    "rebuild:full": "yarn remove:all; yarn; yarn build",
    "rebuild:ts": "yarn remove:ts; yarn build",
    "remove:ts": "yarn remove-comments:ts; yarn remove-common; yarn remove-event-bus:ts",
    "remove:all": "yarn remove-base; yarn remove-client; yarn remove-comments; yarn remove-common; yarn remove-event-bus",
    "remove-base": "rm -rf node_modules; rm yarn.lock",
    "remove-client": "rm -rf packages/client/node_modules",
    "remove-comments": "rm -rf packages/comments/node_modules; rm -rf packages/comments/dist*/",
    "remove-event-bus": "rm -rf packages/event-bus/node_modules; rm -rf packages/event-bus/dist*/",
    "remove-common": "rm -rf packages/common/dist*/",
    "remove-comments:ts": "rm -rf packages/comments/dist*/",
    "remove-event-bus:ts": "rm -rf packages/event-bus/dist*/"
  },
  "keywords": [],
  "author": "mrlucciola (Rocco Lucciola)",
  "license": "MIT",
  "dependencies": {
    "husky": "^8.0.3"
  },
  "devDependencies": {
    "typescript": "^5.0.3"
  },
  "workspaces": [
    "packages/*"
  ]
}

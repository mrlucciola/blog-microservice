{
  "name": "blog-microservice",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "build:watch": "tsc -b tsconfig.json --watch",
    "rebuild:full": "yarn remove:all; yarn",
    "rebuild:ts": "yarn remove:ts; yarn build",
    "remove:ts": "yarn rm-comments:ts; yarn rm-common; yarn rm-constants; yarn rm-interfaces; yarn rm-event-bus:ts; yarn rm-moderation:ts; yarn rm-posts:ts; yarn rm-query:ts",
    "remove:all": "yarn rm-base; yarn rm-comments; yarn rm-common; yarn rm-constants; yarn rm-interfaces; yarn rm-event-bus; yarn rm-moderation; yarn rm-posts; yarn rm-query",
    "rm-base": "rm -rf node_modules; rm yarn.lock",
    "rm-comments": "rm -rf packages/comments/node_modules; yarn rm-comments:ts",
    "rm-event-bus": "rm -rf packages/event-bus/node_modules; yarn rm-event-bus:ts",
    "rm-moderation": "rm -rf packages/moderation/node_modules; yarn rm-moderation:ts",
    "rm-posts": "rm -rf packages/posts/node_modules; yarn rm-posts:ts",
    "rm-query": "rm -rf packages/query/node_modules; yarn rm-query:ts",
    "rm-common": "rm -rf packages/common/dist*/",
    "rm-constants": "rm -rf packages/constants/dist*/",
    "rm-interfaces": "rm -rf packages/interfaces/dist*/",
    "rm-comments:ts": "rm -rf packages/comments/dist*/",
    "rm-event-bus:ts": "rm -rf packages/event-bus/dist*/",
    "rm-moderation:ts": "rm -rf packages/moderation/dist*/",
    "rm-posts:ts": "rm -rf packages/posts/dist*/",
    "rm-query:ts": "rm -rf packages/query/dist*/"
  },
  "keywords": [],
  "author": "mrlucciola (Rocco Lucciola)",
  "license": "MIT",
  "dependencies": {
    "husky": "^8.0.3",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "typescript": "^5.0.3"
  },
  "workspaces": [
    "packages/*",
    "client"
  ]
}

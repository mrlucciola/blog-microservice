{
  "name": "@blog/event-bus",
  "version": "1.0.0",
  "private": true,
  "main": "dist",
  "types": "dist",
  "author": "mrlucciola (Rocco Lucciola)",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "start": "nodemon --exec ts-node ./src/index.ts",
    "d:img": "IMG_NAME=mrlucciola/event_bus:1.0.0; docker image rm $IMG_NAME; docker build -t $IMG_NAME ../.. --file Dockerfile",
    "k:run": "SRV_NAME=event-bus; kubectl apply -f ../../infra/k8s/$SRV_NAME-depl.yaml",
    "k:restart": "SRV_NAME=event-bus; kubectl rollout restart deployment $SRV_NAME-depl",
    "d:exec": "NAME=event-bus; docker exec -it $NAME sh",
    "d:up": "yarn d:run",
    "d:reup": "yarn d:rm; yarn d:img; yarn d:up",
    "k:rm": "IMG_NAME=mrlucciola/event_bus:1.0.0; SRV_NAME=event-bus; kubectl delete deployment $SRV_NAME-depl; kubectl delete service $SRV_NAME-srv; docker image rm $IMG_NAME"
  },
  "dependencies": {
    "@blog/utils": "1.0.0",
    "@blog/constants": "1.0.0",
    "@blog/interfaces": "1.0.0",
    "axios": "^1.3.5",
    "body-parser": "^1.20.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}

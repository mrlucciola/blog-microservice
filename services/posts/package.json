{
  "name": "@blog/posts",
  "version": "1.0.0",
  "private": true,
  "main": "dist",
  "types": "dist",
  "author": "mrlucciola (Rocco Lucciola)",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "start": "nodemon --exec ts-node ./src/index.ts",
    "d:img": "IMG_NAME=mrlucciola/posts:1.0.0; docker image rm $IMG_NAME; docker build -t $IMG_NAME ../.. --file Dockerfile",
    "k:run": "SRV_NAME=posts; kubectl apply -f ../../infra/k8s/$SRV_NAME-depl.yaml",
    "k:srv": "SRV_NAME=posts; kubectl apply -f ../../infra/k8s/$SRV_NAME-srv.yaml",
    "k:exec": "NAME=mrlucciola/posts:1.0.0; sh -c 'kubectl exec -it ${0} sh'",
    "k:up": "yarn k:run",
    "k:restart": "DEPL_NAME=posts-depl; kubectl rollout restart deployment $DEPL_NAME",
    "k:reup": "yarn k:rm; yarn d:img; yarn k:up",
    "k:rm": "IMG_NAME=mrlucciola/posts:1.0.0; DEPL_NAME=posts-depl; kubectl delete deployment $DEPL_NAME; docker image rm $IMG_NAME"
  },
  "dependencies": {
    "@blog/utils": "1.0.0",
    "@blog/constants": "1.0.0",
    "@blog/interfaces": "1.0.0",
    "axios": "^1.3.4",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}

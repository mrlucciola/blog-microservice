{
  "name": "@blog/query",
  "version": "1.0.0",
  "private": true,
  "main": "dist",
  "types": "dist",
  "author": "mrlucciola (Rocco Lucciola)",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "start": "nodemon --exec ts-node ./src/index.ts",
    "d:img": "NAME=query; docker build -t $NAME ../.. --file Dockerfile",
    "d:run": "NAME=query; docker run -itd --name $NAME $NAME",
    "d:exec": "NAME=query; docker exec -it $NAME sh",
    "d:up": "yarn d:img && yarn d:run",
    "d:reup": "yarn d:rm; yarn d:up",
    "d:rm": "NAME=query; docker stop $NAME; docker rm $NAME; docker image rm $NAME"
  },
  "dependencies": {
    "@blog/utils": "1.0.0",
    "@blog/constants": "1.0.0",
    "@blog/interfaces": "1.0.0",
    "axios": "^1.3.4",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
